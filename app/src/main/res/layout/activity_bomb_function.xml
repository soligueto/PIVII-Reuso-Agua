<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BombFunction">

    <TextView
        android:id="@+id/bombTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/funcionamento_da_bomba"
        android:textColor="#1B44AA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/txtActive"
        android:layout_width="106dp"
        android:layout_height="33dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="84dp"
        android:background="#49DD29"
        android:text="Ligada"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bombTitle" />

    <TextView
        android:id="@+id/txtDesactive"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="64dp"
        android:background="#DD0D0D"
        android:text="Desligada"
        android:textAlignment="center"
        android:textColor="#F1EDED"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bombTitle" />

    <Button
        android:id="@+id/btnRefreshB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Atualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bombTitle" />

    <Button
        android:id="@+id/btnBackB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRefreshB"
        app:layout_constraintVertical_bias="0.165" />

    <TextView
        android:id="@+id/textExample"
        android:layout_width="274dp"
        android:layout_height="108dp"
        android:layout_marginTop="152dp"
        android:text="Json"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bombTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>